@model CafeApp.Models.Menu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Bu kaydı silmek istedğinizden emin misiniz?</h3>
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
           BAŞLIK
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
          AÇIKLAMA
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
          RESİM
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
         ÖZEL
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ozel)
        </dd>
        <dt class = "col-sm-2">
          FİYAT
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
           KATEGORİ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary">KAYIT LİSTESİ</a>
    </form>
</div>
